# Use the official PHP 8.2.12 image from Microsoftâ€™s devcontainer registry
FROM mcr.microsoft.com/vscode/devcontainers/php:0-8.2

# Optional: Install additional extensions or packages
RUN apt-get update && apt-get install -y \
    libzip-dev \
    zip \
    && docker-php-ext-install zip

